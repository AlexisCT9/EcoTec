<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mapa_campus"
    tools:context=".MapActivity">

    <!-- ðŸ”¹ MaterialToolbar (Barra superior funcional con menÃº alineado) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:titleTextColor="#059669"
        app:subtitleTextColor="#6B7280"
        app:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/logoEcoTec"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/eco_logo"
                android:contentDescription="Logo EcoTec"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <LinearLayout
                android:id="@+id/titleContainer"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/logoEcoTec"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EcoTec"
                    android:textColor="#059669"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/subtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario General"
                    android:textColor="#6B7280"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_menu"
                android:contentDescription="MenÃº"
                app:tint="#111827"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- ðŸ”¹ Botones circulares sobre el mapa -->

    <Button
        android:id="@+id/btnL"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:cornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:rippleColor="@android:color/transparent" />

    <Button
        android:id="@+id/btnG"
        android:layout_width="64dp"
        android:layout_height="76dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="64dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:rippleColor="@android:color/transparent" />

    <Button
        android:id="@+id/btnK"
        android:layout_width="78dp"
        android:layout_height="93dp"
        android:layout_marginTop="292dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:rippleColor="@android:color/transparent" />

    <Button
        android:id="@+id/btnCafeteria"
        android:layout_width="70dp"
        android:layout_height="71dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="344dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:cornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnL"
        app:rippleColor="@android:color/transparent" />

    <Button
        android:id="@+id/btnCC"
        android:layout_width="90dp"
        android:layout_height="86dp"
        android:layout_marginTop="448dp"
        android:layout_marginEnd="36dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnG"
        app:rippleColor="@android:color/transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>
