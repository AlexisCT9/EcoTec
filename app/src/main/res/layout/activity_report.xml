<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ReportActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerContainer"
        android:layout_width="407dp"
        android:layout_height="68dp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logoEcoTec"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/eco_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/titleContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/logoEcoTec"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EcoTec"
                android:textColor="#059669"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario General"
                android:textColor="#6B7280"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="37dp"
            android:layout_height="25dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/ic_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#111827" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TITULO -->
            <TextView
                android:text="Reportar Problema"
                android:textStyle="bold"
                android:textColor="#111827"
                android:textSize="22sp"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Ayúdanos a mantener el sistema funcionando correctamente"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- SPINNER TIPO -->
            <TextView
                android:text="Tipo de problema *"
                android:textStyle="bold"
                android:textColor="#374151"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/spinnerTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@android:color/white"/>

            <!-- SPINNER CONTENEDOR -->
            <TextView
                android:text="ID o ubicación del contenedor *"
                android:textStyle="bold"
                android:textColor="#374151"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/spinnerContenedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@android:color/white"/>

            <!-- DESCRIPCIÓN -->
            <TextView
                android:text="Descripción del problema *"
                android:textStyle="bold"
                android:textColor="#374151"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:gravity="top|start"
                android:hint="Describe detalladamente el problema que encontraste..."
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"/>

            <!-- FOTO -->
            <TextView
                android:text="Fotografía (opcional)"
                android:textStyle="bold"
                android:textColor="#374151"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/layoutFoto"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/dotted_border"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fotoPreview"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iconCamera"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_camera"
                    android:visibility="visible"
                    app:tint="#9CA3AF"/>

                <TextView
                    android:id="@+id/textFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Haz clic para subir una foto"
                    android:textColor="#6B7280"
                    android:textSize="14sp"
                    android:visibility="visible"/>
            </LinearLayout>

            <!-- BOTÓN -->
            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#2563EB"
                android:text="Enviar Reporte"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
