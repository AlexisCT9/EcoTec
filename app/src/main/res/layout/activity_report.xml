<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ReportActivity">

    <!-- 游댳 Barra superior con logo y t칤tulo -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:titleTextColor="#059669"
        app:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/logoEcoTec"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/eco_logo"
                android:contentDescription="Logo EcoTec"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <LinearLayout
                android:id="@+id/titleContainer"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/logoEcoTec"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EcoTec"
                    android:textColor="#059669"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/subtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario General"
                    android:textColor="#6B7280"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 칈cono de men칰 -->
            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_menu"
                android:contentDescription="Men칰"
                app:tint="#111827"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- 游댳 Contenido principal -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reportar Problema"
                android:textStyle="bold"
                android:textColor="#111827"
                android:textSize="22sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ay칰danos a mantener el sistema funcionando correctamente"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:layout_marginBottom="20dp" />

            <!-- Tipo de problema -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de problema *"
                android:textStyle="bold"
                android:textColor="#374151"
                android:layout_marginBottom="6dp" />

            <Spinner
                android:id="@+id/spinnerTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:layout_marginBottom="16dp" />

            <!-- Contenedor -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID o ubicaci칩n del contenedor *"
                android:textStyle="bold"
                android:textColor="#374151"
                android:layout_marginBottom="6dp" />

            <Spinner
                android:id="@+id/spinnerContenedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:layout_marginBottom="16dp" />

            <!-- Descripci칩n -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripci칩n del problema *"
                android:textStyle="bold"
                android:textColor="#374151"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/edtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Describe detalladamente el problema que encontraste..."
                android:gravity="top|start"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColorHint="#9CA3AF"
                android:textColor="#111827"
                android:layout_marginBottom="16dp" />

            <!-- Fotograf칤a -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fotograf칤a (opcional)"
                android:textStyle="bold"
                android:textColor="#374151"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/layoutFoto"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/dotted_border"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_camera"
                    app:tint="#9CA3AF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Haz clic para subir una foto"
                    android:textColor="#6B7280"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PNG, JPG hasta 5MB"
                    android:textColor="#9CA3AF"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Bot칩n Enviar -->
            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar Reporte"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="14dp"
                android:backgroundTint="#2563EB"
                app:cornerRadius="14dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
