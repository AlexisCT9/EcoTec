<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/bg_user_card"
    android:layout_marginBottom="12dp">

    <!-- AVATAR -->
    <TextView
        android:id="@+id/avatarText"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="MC"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_avatar_color"
        android:layout_marginEnd="12dp" />

    <!-- CONTENIDO -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <!-- NOMBRE -->
        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:text="Nombre Usuario" />

        <!-- CORREO + TELÉFONO -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/txtCorreo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#6B7280"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="6dp"
                android:text="correo@correo.com" />

            <TextView
                android:id="@+id/txtTelefono"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#6B7280"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="6dp"
                android:text="2222334455" />
        </LinearLayout>

        <!-- ROL + ÁREA -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/txtRolTag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="Administrador"
                android:textColor="#2563EB"
                android:background="@drawable/bg_chip_blue"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/txtAreaTag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="Mantenimiento"
                android:textColor="#059669"
                android:background="@drawable/bg_chip_green"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- BOTONES -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:textColor="#2563EB"
            android:drawableStart="@drawable/ic_edit"
            android:drawablePadding="6dp"
            android:padding="6dp" />

        <TextView
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:textColor="#DC2626"
            android:drawableStart="@drawable/ic_delete"
            android:drawablePadding="6dp"
            android:padding="6dp" />
    </LinearLayout>

</LinearLayout>
