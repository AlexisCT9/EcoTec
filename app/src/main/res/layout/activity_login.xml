<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_login_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!--  LOGO + TÍTULO  -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bg_circle_white"
                android:src="@drawable/ic_trash_circle"
                android:padding="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EcoTec"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestión Inteligente de Residuos"
                android:textColor="#E2E8F0"
                android:textSize="14sp" />
        </LinearLayout>

        <!--  SELECTOR DE ROL  -->
        <LinearLayout
            android:id="@+id/roleSelector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_selector_blur"
            android:padding="5dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- ADMINISTRADOR -->
            <LinearLayout
                android:id="@+id/btnAdmin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/bg_role_selected">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_admin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Administrador"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>

            <!-- LIMPIEZA -->
            <LinearLayout
                android:id="@+id/btnClean"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/bg_role_unselected">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_clean" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limpieza"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>

        </LinearLayout>

        <!--  CARD LOGIN  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_white"
            android:padding="26dp"
            android:elevation="12dp"
            android:clipToOutline="true"
            android:layout_marginTop="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesión"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1F2937"/>

            <TextView
                android:id="@+id/subtitleRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acceso al panel"
                android:textColor="#6B7280"
                android:layout_marginBottom="20dp" />

            <!-- EMAIL -->
            <EditText
                android:id="@+id/edtCorreo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/input_field"
                android:hint="Correo electrónico"
                android:paddingStart="6dp"
                android:textColor="#111827"
                android:drawableLeft="@drawable/ic_mail"
                android:drawablePadding="12dp"/>

            <!-- PASSWORD -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_field"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="12dp"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:paddingStart="6dp"
                    android:paddingEnd="50dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/btnTogglePass"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/ic_eye_off"
                    android:padding="2dp"/>
            </RelativeLayout>

            <!-- ALERTA -->
            <TextView
                android:id="@+id/txtEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="12dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"/>

            <!--  BOTÓN LOGIN -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/btn_login_gradient"
                android:text="Iniciar Sesión"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
