<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F9FAFB"
    tools:context=".DBTestActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prueba de Conexión con Servidor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#059669"
        android:layout_gravity="center"
        android:paddingBottom="20dp" />

    <EditText
        android:id="@+id/edtTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo de reporte"
        android:inputType="text"
        android:backgroundTint="#059669"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/edtDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción del problema"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:backgroundTint="#059669"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnProbarConexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Probar Conexión"
        android:backgroundTint="#059669"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="12dp" />

</LinearLayout>
