<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6">

    <!-- ðŸ” Top Bar (usando tu barra del menÃº) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topBarRecommend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:title="EcoTec"
        app:titleTextColor="#059669"
        app:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/logoEcoTec"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/eco_logo"
                android:contentDescription="Logo EcoTec"
                app:tint="#059669"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/titleContainer"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/logoEcoTec"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EcoTec"
                    android:textColor="#059669"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario General"
                    android:textColor="#6B7280"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_menu"
                android:contentDescription="Menu Icon"
                app:tint="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- ðŸŒ± TÃ­tulo -->
    <TextView
        android:id="@+id/txtRecoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona el tipo de residuo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#111827"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBarRecommend"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ðŸŒ¿ TARJETAS DE TIPOS (PASO 1) -->
    <LinearLayout
        android:id="@+id/layTipos"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtRecoTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- PLÃSTICO -->
        <LinearLayout
            android:id="@+id/cardPlastico"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_white"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_trash"
                app:tint="#059669" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PlÃ¡stico"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!-- PAPEL -->
        <LinearLayout
            android:id="@+id/cardPapel"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_white"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_book"
                app:tint="#3B82F6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Papel / CartÃ³n"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!-- METAL -->
        <LinearLayout
            android:id="@+id/cardMetal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_white"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_clean"
                app:tint="#059669" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metal"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!-- ORGÃNICO -->
        <LinearLayout
            android:id="@+id/cardOrganico"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_white"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_trash"
                app:tint="#F59E0B" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OrgÃ¡nico"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!-- GENERAL -->
        <LinearLayout
            android:id="@+id/cardGeneral"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_white"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_trash"
                app:tint="#6B7280" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>

    <!-- ðŸ“ PASO 2 â€“ Seleccionar ubicaciÃ³n -->
    <Spinner
        android:id="@+id/spinnerUbicacion"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_input"
        android:paddingHorizontal="16dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/layTipos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ“¦ RECYCLER -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRecomendaciones"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerUbicacion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
