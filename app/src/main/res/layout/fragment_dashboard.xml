<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- ============================= -->
    <!--   HEADER ECO-TEC GRADIENTE   -->
    <!-- ============================= -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/header_gradient"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="24dp"
            android:paddingEnd="22dp"
            android:paddingBottom="90dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dashboard_title"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/dashboard_subtitle"
                android:textColor="#E0FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <!-- ================================== -->
    <!--     CONTENIDO SCROLLEABLE          -->
    <!-- ================================== -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-7dp">

            <!-- =============================== -->
            <!-- GRID DE ESTADÍSTICAS ECO-TEC   -->
            <!-- =============================== -->


            <!-- =============================== -->
            <!--        LISTA DE BASUREROS       -->
            <!-- =============================== -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:padding="16dp">

                <!-- ====== CARD USUARIOS ====== -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_purple"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- ICONO -->
                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:padding="14dp"
                            android:src="@drawable/ic_users"
                            app:tint="@android:color/white" />

                        <TextView
                            android:id="@+id/txtUsuarios"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="38sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/usuarios_totales"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <!-- ====== CARD BASUREROS ====== -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_green"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:padding="14dp"
                            android:src="@drawable/ic_trash"
                            app:tint="@android:color/white" />

                        <TextView
                            android:id="@+id/txtBasureros"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="38sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/basureros_activos"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <!-- ====== CARD PENDIENTES ====== -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_orange"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:padding="14dp"
                            android:src="@drawable/ic_pending"
                            app:tint="@android:color/white" />

                        <TextView
                            android:id="@+id/txtPendientes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="38sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pendientes"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <!-- ====== CARD ATENCIÓN ====== -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_blue"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:padding="14dp"
                            android:src="@drawable/ic_alert"
                            app:tint="@android:color/white" />

                        <TextView
                            android:id="@+id/txtAtencion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="38sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/requieren_atencion"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estado_de_basureros"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:id="@+id/containerBasureros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="24dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
